<html>
    <body> 
        <% cakeid = params["id"].to_i %>
        <% result = DB[:cakelist].select(:name).where(id: cakeid).get(:name) %>
        <h1><%= result %></h1>
        <form method="POST" action=<%= "/updatesuccess/#{cakeid}" %>>
            <label for="cakename">Update cake name:</label>
            <input type="text" id="cakename" name="cakename"><br><br>
            <input type="submit" value="Submit">
        </form>
    </body>
</html>